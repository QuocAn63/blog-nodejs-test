<div class="mt-4">
    <div class="row">
        {{#each courses}}
            <div class="col-sm-3">
                <div class="card card__card-item" style="width: 18rem;">
                    <a href="/courses/{{this.slug}}">
                        <img src={{this.image}} class="card-img-top" alt="...">
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text text-truncate">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Học ngay thôi</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>